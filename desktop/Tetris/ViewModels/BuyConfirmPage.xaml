            <Border BackgroundColor="#00ff00" Stroke="#00ff00" StrokeThickness="0" HorizontalOptions="StartAndExpand" WidthRequest="150" HeightRequest="50" Margin="0, 0, 0, 25">
                <Label FontFamily="Tetris" FontSize="28" Text="Yes" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border BackgroundColor="#ff0000" Stroke="#ff0000" StrokeThickness="0" HorizontalOptions="EndAndExpand" WidthRequest="150" HeightRequest="50" Margin="25, 0, 0, 0">
                <Label FontFamily="Tetris" FontSize="28" Text="No" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
